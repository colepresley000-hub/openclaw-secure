# ShieldClaw Environment Configuration
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ============================================================================
# ENVIRONMENT
# ============================================================================

# Options: development, production, staging
NODE_ENV=development


# ============================================================================
# API CONFIGURATION
# ============================================================================

# Get your API key from: https://console.anthropic.com/
# Format: sk-ant-api03-...
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Claude model to use
# Options: claude-opus-4-20250514, claude-sonnet-4-20250514, claude-haiku-4-20250514
MODEL_ID=claude-sonnet-4-20250514


# ============================================================================
# SECURITY
# ============================================================================

# Generate with: openssl rand -hex 32
SESSION_SECRET=your-session-secret-here

# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-encryption-key-here

# JWT secret (if using JWT authentication)
# Generate with: openssl rand -hex 64
JWT_SECRET=your-jwt-secret-here


# ============================================================================
# RATE LIMITING
# ============================================================================

# Maximum requests per minute per user
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Burst limit (max concurrent requests)
RATE_LIMIT_BURST=10

# Window size for rate limiting (seconds)
RATE_LIMIT_WINDOW=60


# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Port to listen on
PORT=3000

# Host to bind to (use 0.0.0.0 for all interfaces)
HOST=localhost

# Base URL for the application
BASE_URL=http://localhost:3000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001


# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log format: json, text
LOG_FORMAT=json

# Enable request logging
LOG_REQUESTS=true

# Log directory
LOG_DIR=./logs

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=300


# ============================================================================
# SECURITY FEATURES
# ============================================================================

# Enable prompt injection defense
ENABLE_PROMPT_INJECTION_DEFENSE=true

# Enable PII detection and redaction
ENABLE_PII_DETECTION=true

# Enable audit logging
ENABLE_AUDIT_LOGGING=true

# Enable kill switch
KILL_SWITCH_ENABLED=true

# Enable IP whitelist
ENABLE_IP_WHITELIST=false

# Allowed IP addresses (comma-separated, only if whitelist enabled)
ALLOWED_IPS=


# ============================================================================
# FILE PATHS
# ============================================================================

# Configuration file
CONFIG_FILE=openclaw.json

# System prompt file
SOUL_FILE=SOUL.md

# Data directory
DATA_DIR=./data

# Backup directory
BACKUP_DIR=./backups


# ============================================================================
# OPERATIONAL LIMITS
# ============================================================================

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Max tokens per request
MAX_TOKENS_PER_REQUEST=4096

# Max context window
MAX_CONTEXT_WINDOW=100000

# Max input length (characters)
MAX_INPUT_LENGTH=4000


# ============================================================================
# DATABASE (if applicable)
# ============================================================================

# Database type: postgres, mysql, mongodb, sqlite
# DB_TYPE=postgres

# Database connection URL
# DB_URL=postgresql://user:password@localhost:5432/openclaw

# Connection pool size
# DB_POOL_SIZE=10

# Connection timeout (ms)
# DB_TIMEOUT=5000


# ============================================================================
# REDIS (if applicable)
# ============================================================================

# Redis URL for session storage and rate limiting
# REDIS_URL=redis://localhost:6379

# Redis password
# REDIS_PASSWORD=

# Redis database number
# REDIS_DB=0


# ============================================================================
# EMAIL ALERTS (if applicable)
# ============================================================================

# SMTP configuration for security alerts
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Alert recipients (comma-separated)
# ALERT_EMAILS=admin@example.com,security@example.com


# ============================================================================
# WEBHOOKS (if applicable)
# ============================================================================

# Slack webhook for alerts
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord webhook for alerts
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL


# ============================================================================
# BACKUP & RECOVERY
# ============================================================================

# Enable automatic backups
ENABLE_BACKUPS=true

# Backup interval (hours)
BACKUP_INTERVAL=24

# Backup retention days
BACKUP_RETENTION_DAYS=30


# ============================================================================
# COMPLIANCE
# ============================================================================

# Enable GDPR compliance features
GDPR_COMPLIANT=true

# Data retention period (days)
DATA_RETENTION_DAYS=90

# Anonymize logs
ANONYMIZE_LOGS=true

# Require user consent
REQUIRE_CONSENT=true


# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Enable debug mode (DO NOT use in production!)
# DEBUG=false

# Enable hot reload
# HOT_RELOAD=true

# Mock API responses (for testing)
# MOCK_API=false

# Disable security features (for testing only!)
# DISABLE_SECURITY=false
